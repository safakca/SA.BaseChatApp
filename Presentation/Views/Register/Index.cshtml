@model AppUser
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex align-items-center justify-content-center" style="height: 500px;">
    <div>
        <div class="d-flex col col-12 p-4" style="background-color:#262627">

            <div class="d-flex row col">
                <form method="post">
                    <div class="mb-3">
                        <label class="text-white">Name</label>

                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                    <div class="mb-3">
                        <label class="text-white">Surname</label>
                        <input type="text" class="form-control" asp-for="Surname">
                    </div>
                    <div class="mb-3">
                        <label class="text-white">Username</label>
                        <input type="text" class="form-control" asp-for="UserName">
                    </div>
                    <div class="mb-3">
                        <label class="text-white">Gender</label>
                        <input type="text" class="form-control" asp-for="Gender">
                    </div> 
                    <div class="mb-3">
                        <label class="text-white">Phone</label>
                        <input type="tel" class="form-control" asp-for="PhoneNumber">
                    </div>
                    <div class="mb-3">
                        <label class="text-white">Password</label>
                        <input type="password" class="form-control" asp-for="PasswordHash">
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-sm" style="background-color:#FFE200">Create Account</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>