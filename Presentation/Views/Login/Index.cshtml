@model UserSignInModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex align-items-center justify-content-center" style="height: 500px;">
    <div>
        <div class="d-flex col col-12 p-4" style="background-color:#262627">

            <div class="d-flex col-6 p-4 align-items-center justify-content-center">
                <a href="#">
                    <img src="~/pictures/chattt.png" style="width:100%; height:auto" />
                </a>
            </div> 

            <div class="d-flex row col-6">
                <form class="w-100" method="post">
                    <div class="mb-3">
                        <label class="text-white">Username</label>
                        <input type="text" class="form-control" id="username" asp-for="UserName"> 
                    </div>
                    <div class="mb-3">
                        <label class="text-white">Password</label>
                        <input type="password" class="form-control" id="password" asp-for="Password">
                    </div> 
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-sm" style="background-color:#FFE200">Login</button>
                    </div>
                    <div class="text-left dont-have text-white">Don’t have an account? <a href="/Register/Index">Register</a></div>

                </form>
            </div>
        </div>
    </div>
</div>




